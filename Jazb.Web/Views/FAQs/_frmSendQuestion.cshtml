@model Jazb.DomainClasses.Entities.FAQ

<div>

   <blockquote class="blockquote-reverse">
       <h3>فرم ارسال سئوال</h3>
       <footer>
           <strong>کاربر گرامی</strong>
           از طریق این فرم می توانید سئوالات خود را برای ما ارسال کنید
           <br />
           به سئوالات شما ظرف یک روز جواب داده خواهد شد
       </footer>
   </blockquote>
   
</div>

            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="well well-lg bg-success">
                @using (Html.BeginForm("Create","FAQs"))
                {
                    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })

      
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.FirstName, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FirstName, null, new { @class = "has-error help-block" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.LastName, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LastName, null, new { @class = "has-error help-block" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.MeliCode, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.MeliCode, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MeliCode, null, new { @class = "has-error help-block" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                        @Html.Label("نوع آزمون", new { @class = "control-label" })
                                     @Html.DropDownList("AzmoonId", ViewBag.AzmoonList as IEnumerable<SelectListItem>, new {@class = "form-control"})
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Subject, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Subject, null, new { @class = "has-error help-block" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">


                            <div class="form-group">
                                @Html.LabelFor(model => model.Body, new { @class = "control-label" })
                                @Html.TextAreaFor(model => model.Body, new { @class = "form-control", style="height:120px;" })
                                @Html.ValidationMessageFor(model => model.Body, null, new { @class = "has-error help-block" })
                            </div>
                        </div>
                    </div>

                    

                    <div class="row">
                        <div class="col-md-4">
                            <input type="submit" value="Save" class="btn btn-primary btn-block" />
                        </div>
                        <div class="col-md-4">
                            @Html.ActionLink("مشاهده پاسخ ها", "AnswerIndex", "FAQs");
                        </div>
                    </div>
                }
                    
                    </div>

            </div>


