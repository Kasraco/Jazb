@model Jazb.DomainClasses.Entities.FAQ
@using Jazb.Web.Helpers
@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="row">
    <div class="col-md-3">
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, new { @class = "control-label" })
            @Html.DisplayFor(model => model.FirstName, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            @Html.LabelFor(model => model.LastName, new { @class = "control-label" })
            @Html.DisplayFor(model => model.LastName, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            @Html.LabelFor(model => model.MeliCode, new { @class = "control-label" })
            @Html.DisplayFor(model => model.MeliCode, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            @Html.LabelFor(model => model.QuestionDate, new { @class = "control-label" })
            <div class="form-control">@String.Format("{0:g}", Html.ConvertToPersianDateTime(Model.QuestionDate) )</div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.Subject, new { @class = "control-label" })
            @Html.DisplayFor(model => model.Subject, new { @class = "form-control" })
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">


        <div class="form-group">
            @Html.LabelFor(model => model.Body, new { @class = "control-label" })
            @Html.DisplayFor(model => model.Body, new { @class = "form-control", style="height:120px;" })
            
        </div>
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.BodyAnswer, new { @class = "control-label" })
    @Html.TextAreaFor(model => model.BodyAnswer, new { @class = "form-control", style="height:150px;" })
   @Html.ValidationMessageFor(model => model.BodyAnswer, null, new { @class = "has-error help-block" })
</div>



