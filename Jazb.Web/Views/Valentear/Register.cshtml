            $('#ValentearPlaceId').val(0);
        });

        $('#ValentearPlaceId').change(function () {
            selectjob = 1;
            selectPlace = $('#ValentearPlaceId').val();
           
        });

        $('#btn_BefSave').click(function (e) {

          
            if (selectPlace != 0)
                $("#wizForm").submit();
        });
    });





</script>



