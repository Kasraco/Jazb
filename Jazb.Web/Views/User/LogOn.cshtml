@model Jazb.Model.LogOnModel
@{
    ViewBag.Title = "ورود به سایت";
}
<style type="text/css">
        body {
            padding-top: 50px;
        }
</style>

<div id="logonDiv" style="padding: 20px;">
    @using (Html.BeginForm(MVC.User.ActionNames.LogOn, MVC.User.Name, FormMethod.Post, new { @class = "form-horizontal", id = "frmLogOn" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("returnUrl", ViewBag.ReturnUrl as string)
        <div class="form-group">
            <label class="col-sm-2  control-label" for="Identity">ایمیل یا نام کاربری</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(user => user.Identity, new { placeholder = "Email or Username", @class = "form-control ltr" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2  control-label"  for="Password">کلمه عبور</label>
            <div class="col-sm-10">
                @Html.PasswordFor(user => user.Password, new { placeholder = "Password", @class = "form-control ltr" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <label>
                    @Html.CheckBox("RememberMe", false, new { @class = "checkbox" })مرا به یاد داشته باش
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-success" id="btnLogOn" name="name" value="ورود" />
            </div>
        </div>

        <div id="aa-result" class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                @Html.ValidationSummary()
            </div>
        </div>

    }
</div>


