@foreach (var azmoon in Model)
{
    index = index + 1;
    if ((index % 2 != 0))
    {
        if ((azmoon.EveryOneSee == true) || ((azmoon.EveryOneSee == false) && (User.Identity.IsAuthenticated == true)))
        {
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">@azmoon.Title</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">

                            <h3 style="color:red;">
                                <strong>@azmoon.Name</strong>
                                <small>
                                    @azmoon.Discription.ToString()
                                </small>
                            </h3>
                            <ul>
                                <li><h4>@Html.ActionLink("دریافت آگهی  آزمون", MVC.Home.ActionNames.DownloadAgahi, MVC.Home.Name, new { AID = @azmoon.AzmoonId }, null).If(azmoon.ShowDownloadAgahi)</h4></li>
                                @*<li><h4>@Html.ActionLink("خرید کارت آزمون", MVC.Payment.ActionNames.Index, MVC.Payment.Name, new { AID = @azmoon.AzmoonId }, null).If(azmoon.ShowRegisters)</h4></li>*@
                                <li><h4>@Html.ActionLink("ثبت نام آزمون", MVC.Valentear.ActionNames.Register, MVC.Valentear.Name, new { AID = @azmoon.AzmoonId }, null).If(azmoon.ShowRegisters)</h4></li>
                                <li><h4>@Html.ActionLink("ویرایش ثبت نام", MVC.Valentear.ActionNames.EditRegister, MVC.Valentear.Name, new { AID = @azmoon.AzmoonId }, null).If(azmoon.ShowCanEditResult)</h4></li>
                                <li><h4>@Html.ActionLink("دریافت کارت ورود به جلسه", MVC.Valentear.ActionNames.ViewCard, MVC.Valentear.Name, new { AID = @azmoon.AzmoonId }, null).If(azmoon.ShowPrintCard)</h4></li>
                                <li><h4>@Html.ActionLink("اعلام نتایج", MVC.Result.ActionNames.Index, MVC.Result.Name, new { AID = @azmoon.AzmoonId }, null).If(azmoon.ShowCanPrintResult)</h4></li>
                            </ul>


                            @Html.Action(MVC.articles.ActionNames.AzmoonlistArticle, MVC.articles.Name, new { Aid = azmoon.AzmoonId })
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        if ((azmoon.EveryOneSee == true) || ((azmoon.EveryOneSee == false) && (User.Identity.IsAuthenticated == true)))
        {
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">@azmoon.Title</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-warning">

                                <h3 style="color:red;">
                                    <strong>@azmoon.Name</strong>
                                    <small>
                                        @azmoon.Discription.ToString()
                                    </small>
                                </h3>
                                <ul>

                                    <li><h4>@Html.ActionLink("دریافت آگهی  آزمون", MVC.Home.ActionNames.DownloadAgahi, MVC.Home.Name, new { AID = @azmoon.AzmoonId }, null).If(azmoon.ShowDownloadAgahi)</h4></li>
                                    @*<li><h4>@Html.ActionLink("خرید کارت آزمون", MVC.Payment.ActionNames.Index, MVC.Payment.Name, new { AID = @azmoon.AzmoonId }, null).If(azmoon.ShowRegisters)</h4></li>*@
                                    <li><h4>@Html.ActionLink("ثبت نام آزمون", MVC.Valentear.ActionNames.Register, MVC.Valentear.Name, new { AID = @azmoon.AzmoonId }, null).If(azmoon.ShowRegisters)</h4></li>
                                    <li><h4>@Html.ActionLink("ویرایش ثبت نام", MVC.Valentear.ActionNames.EditRegister, MVC.Valentear.Name, new { AID = @azmoon.AzmoonId }, null).If(azmoon.ShowCanEditResult)</h4></li>
                                    <li><h4>@Html.ActionLink("دریافت کارت ورود به جلسه", MVC.Valentear.ActionNames.ViewCard, MVC.Valentear.Name, new { AID = @azmoon.AzmoonId }, null).If(azmoon.ShowPrintCard)</h4></li>
                                    <li><h4>@Html.ActionLink("اعلام نتایج", MVC.Result.ActionNames.Index, MVC.Result.Name, new { AID = @azmoon.AzmoonId }, null).If(azmoon.ShowCanPrintResult)</h4></li>
                                </ul>


                                @Html.Action(MVC.articles.ActionNames.AzmoonlistArticle, MVC.articles.Name, new { Aid = azmoon.AzmoonId })


                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
    }
}

