@model Jazb.Model.AdminModel.ManageAmCard.AddAmountCardViewModel
<div class="modal-dialog modal-lg">
    <div class="modal-content">
       @using (Ajax.BeginForm(MVC.Admin.ManageAmountCard.ActionNames.AddAmondCard, MVC.Admin.ManageAmountCard.Name, null, new AjaxOptions { UpdateTargetId = "monitors", InsertionMode = InsertionMode.Replace, HttpMethod = "POST", OnBegin = "showLoading", OnComplete = "hideLoading", OnSuccess = "LogOnForm.onEndSuccess" }, new { enctype = "multipart/form-data", @class = "form-horizontal", id = "add-ManageAmountCard-form" }))
       {
        @Html.AntiForgeryToken()
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3>تولید کارت پرداخت</h3>
            </div>
            <div class="modal-body">

     
                @Html.HiddenFor(x => x.AzmoonId)

                <div class="control-group">
                    @Html.LabelFor(model => model.Amount, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Amount, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Amount, null, new { @class = "has-error help-block" })

                </div>

                <div class="control-group">
                    @Html.LabelFor(model => model.AmountCardCount, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.AmountCardCount, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AmountCardCount, null, new { @class = "has-error help-block" })
                </div>




            </div>
            <div id="monitors"></div>
            <div class="modal-footer" style="text-align: right;">
                <input type="submit" value="ذخیره" id="start" class="btn btn-primary " />
                <button class="btn btn-danger" data-dismiss="modal" aria-hidden="true">بستن</button>
            </div>
       }
    </div>
</div>

