@model Jazb.Models.category

@{
    ViewBag.Title = "Details";
}
@section ContentPanel{

<div class="page-header">
			  <h1>Detail  
			      <small>category</small>			  
			  </h1>
			</div>

<div class="container" id="divpanle">
    <div class="row">
       <div class="col-xs-6 col-sm-6 col-md-6">


<div class="panel panel-danger">
 
   <div class="panel-body">

    <div class="form-group">
	   @Html.LabelFor(model => model.Name, new { @class = "control-label" })
       @*<div class="control-label">Name</div>*@
       <div class="form-control">@Model.Name</div>
	</div>

    <div class="form-group">
	   @Html.LabelFor(model => model.Description, new { @class = "control-label" })
       @*<div class="control-label">Description</div>*@
       <div class="form-control">@Model.Description</div>
	</div>

    <div class="form-group">
	   @Html.LabelFor(model => model.Order, new { @class = "control-label" })
       @*<div class="control-label">Order</div>*@
       <div class="form-control">@Model.Order</div>
	</div>

    <div class="form-group">
	   @Html.LabelFor(model => model.Articles, new { @class = "control-label" })
       @*<div class="control-label">Articles</div>*@
       <div class="form-control">@(Model.Articles == null ? "None" : Model.Articles.Count.ToString())</div>
	</div>
</div>
</div>

</div>
</div>
</div>

<p>
    @Html.ActionLink("Edit ", "Edit", new { id=Model.CategoryId }, new { @class = "btn btn-info" }) |
