@model Jazb.Model.ValentearModel.RegisterModel
@using Jazb.Web.Helpers

<style type="text/css">
    .styled_checkbox {
        cursor: pointer;
        border-radius: 5px;
        margin: 3px;
        padding: 0px 5px;
    }

    .styled_list {
        padding: 3px 10px 3px 5px;
        line-height: 25px;
    }

    .span2,
    .control-label {
        text-align: right;
    }

    .controls {
        text-align: right;
        padding: 5px;
        border: 1px solid #e9e9e9;
        background-color: #fff;
    }
</style>


<link href="~/Scripts/chosen/chosen.css" rel="stylesheet" />
<link href="~/Content/bootstrap-fileupload.min.css" rel="stylesheet" />

<div class="container-fluid" id="div-valentear-detail">

    <style>
        .span2,
        .control-label {
            text-align: right;
        }
    </style>

    <div class="well">
        <h3 class="text-center">پیش نمایش اطلاعات
        </h3>
    </div>

    @using (Ajax.BeginForm(MVC.Admin.Valentear.ActionNames.SaveDate, MVC.Admin.Valentear.Name, new AjaxOptions { UpdateTargetId = "main-content", InsertionMode = InsertionMode.Replace, HttpMethod = "POST", OnBegin = "showLoading", OnComplete = "hideLoading", OnSuccess = "loadAjaxComponents" }, new { @class = "form-horizontal", enctype = "multipart/form-data", id = "wizForm" }))
    {
    
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "لطفا اطلاعات را کامل و به صورت صحیح وارد کنید", new { @class = "alert alert-danger" })

        @Html.HiddenFor(m => m.Valentear.Id)
        @Html.HiddenFor(m => m.Valentear.TrackingCode)
        @Html.HiddenFor(m => m.Valentear.FirstName)
        @Html.HiddenFor(m => m.Valentear.LastName)
        @Html.HiddenFor(m => m.Valentear.FatherName)
        @Html.HiddenFor(m => m.Valentear.GenderId)
        @Html.HiddenFor(m => m.Valentear.ReligionId)
        @Html.HiddenFor(m => m.Valentear.FaithId)
        @Html.HiddenFor(m => m.Valentear.BirthCertificateNo)
        @Html.HiddenFor(m => m.Valentear.NationalID)
        @Html.HiddenFor(m => m.Valentear.MarriageStatusId)
        @Html.HiddenFor(m => m.Valentear.IssuancePlace_City)
