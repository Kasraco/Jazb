@model Jazb.Models.article
@using KRBMembership.PersianDate;
@{
    ViewBag.Title = Model.Title;
}
@section ContentPanel{


    @{
        var base64 = Convert.ToBase64String(Model.Picture);
        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    }

<div class="container" id="divpanle">
    <div class="row">
       <div class="col-xs-12 col-sm-12 col-md-12">



<div class="panel panel-danger">
 
   <div class="panel-body">

       <div class="row">
           <div class="col-md-3">

               <div class="list-group">
                   <div class="list-group-item zero-padding">
                       <img src="@imgSrc" class="img-responsive"    />
                   </div>
                   <a href="#" class="list-group-item">@Model.Category.Name</a>
                   <a href="#" class="list-group-item">@Model.StartDate.ToPeString("dddd, dd MMMM,yyyy")</a>
                   <a href="#" class="list-group-item">
                       @if (@Model.ExpireDate != null)
                       {
                           @Model.ExpireDate.Value.ToPeString("dddd, dd MMMM,yyyy")
                       }
                       else
                       {
                       
                           <div class="text-danger">تاریخ انقضاء ندارد</div>
                       }
                   </a>
                   <a href="#" class="list-group-item">@Model.User.UserName</a>
               </div>
           </div>
           <div class="col-md-9">

               <h1>@Model.Title</h1>
               <p><a href="@Model.SourceUrl" target="_blank">@Model.SourceUrl</a></p>
               <div class="well">
                   @Model.MinBody
               </div>
               <p>
                   @Html.Raw(Model.Body)
               </p>
           </div>
            @Html.ActionLink("بازگشت", "Index","Home",null, new { @class = "btn btn-default " })
       </div>


  
 

 
 
</div>
</div>

</div>
</div>
</div>

