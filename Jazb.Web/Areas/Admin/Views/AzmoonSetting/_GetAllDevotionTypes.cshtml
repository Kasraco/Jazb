@model List<Jazb.DomainClasses.Entities.AzmoonDevotionType>
@using Jazb.Web
<table class="table table-bordered table-striped  ">
    <thead>
        <tr>
            <th>درجه</th>
            <th>عنوان</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
            {
            <tr>
                <td>@t.Grade.ToString()</td>
                <td style="font-size:9pt;">@t.DevotionTypeTitle</td>
                <td>
                    @Ajax.ActionLink(" ", MVC.Admin.AzmoonSetting.ActionNames.UpDevotionType, MVC.Admin.AzmoonSetting.Name, new { Id = t.Id, AzmoonId = t.Azmoon.AzmoonId }, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "AzmoonDevotionTypeList", OnSuccess = "loadAjaxComponents", OnComplete = "hideLoading", OnBegin = "showLoading" }, new { @class = "fa fa-caret-square-o-up fa-2x", style = "color:gray;" })

                    @Ajax.ActionLink(" ", MVC.Admin.AzmoonSetting.ActionNames.DownDevotionType, MVC.Admin.AzmoonSetting.Name, new { Id = t.Id, AzmoonId = t.Azmoon.AzmoonId }, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "AzmoonDevotionTypeList", OnSuccess = "loadAjaxComponents", OnComplete = "hideLoading", OnBegin = "showLoading" }, new { @class = "fa fa-caret-square-o-down fa-2x", style = "color:gray;" })


                    @Ajax.ActionLink(" ", MVC.Admin.AzmoonSetting.ActionNames.DeleteDevotionType, MVC.Admin.AzmoonSetting.Name, new { Id = t.Id }, new AjaxOptions { HttpMethod = "DELETE", InsertionMode = InsertionMode.Replace, UpdateTargetId = "AzmoonDevotionTypeList", OnSuccess = "loadAjaxComponents", OnComplete = "hideLoading", OnBegin = "showLoading", Confirm = "آیا برای حذف اطمینان دارید؟" }, new { @class = " fa fa-minus-square fa-2x ", style = "color:red;" })



                </td>
            </tr>
        }
    </tbody>
</table>

@Html.Raw(TempData["Message"])
