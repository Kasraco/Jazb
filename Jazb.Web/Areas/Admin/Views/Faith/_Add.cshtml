@model Jazb.Model.AdminModel.FaithViewModel
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        @using (Ajax.BeginForm(MVC.Admin.Faith.ActionNames.Add, MVC.Admin.Faith.Name, null, new AjaxOptions { UpdateTargetId = "index-result", InsertionMode = InsertionMode.Replace, HttpMethod = "POST", OnBegin = "showLoading", OnComplete = "hideLoading", OnSuccess = "LogOnForm.onEndSuccess" }, new { enctype = "multipart/form-data", @class = "form-horizontal", id = "Setting-CardAzmoon-form" }))
        {
            @Html.AntiForgeryToken()
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3> مذهب جدید</h3>
            </div>
            <div class="modal-body">


                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                @Html.AntiForgeryToken()


                <div class="control-group">
                    @Html.LabelFor(model => model.FaithCode, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.FaithCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FaithCode, null, new { @class = "has-error help-block" })

                </div>

                <div class="control-group">
                    @Html.LabelFor(model => model.FaithTitle, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.FaithTitle, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FaithTitle, null, new { @class = "has-error help-block" })

                </div>



            </div>
            <div class="modal-footer" style="text-align: right;">
                <input type="submit" value="Save" class="btn btn-primary " />
                <button class="btn btn-danger" data-dismiss="modal" aria-hidden="true">بستن</button>
            </div>
        }
    </div>
</div>

<script>
    run(function () {
        $.validator.unobtrusive.parse('#Setting-CardAzmoon-form');
        $('.date-picker').datepicker({ changeMonth: true, changeYear: true });
    })

</script>

